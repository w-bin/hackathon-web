extends layout
block content
  .container-fluid
    .row
      .col-lg-4.col-md-4.col-sm-4
      .col-lg-4.col-md-4.col-sm-4.col-xs-12
        p#tip #{tip}
        include header.jade
        form(method='post')
          .form-group
            label 用户名
            input(type='text' name='username' class='form-control' placeholder='请输入用户名' required='true')
          .form-group
            label 密码
            input(type='password' name='password' class='form-control' placeholder='请输入密码' required='true')
          .form-group
            input(type='submit' class='btn btn-primary submit-btn' value='登陆')
      .col-lg-4.col-md-4.col-sm-4
block append script
  <!-- 本地 JavaScript 文件 -->
  script(src="/javascripts/login.js") 